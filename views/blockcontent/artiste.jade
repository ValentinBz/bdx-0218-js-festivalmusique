extends ../layout.jade

block content
  main#artiste
    each Artiste in tableArtistes
      .container
        .text-left.mt-5
          a.retour.copy--pink(href="/programmation", title="Revenir à la programmation") Retour
        section
          .row
            .col-12.col-md-6
              .embed-responsive.embed-responsive-16by9
                  iframe.embed-responsive-item(width='100%', height='100%', src='https://www.youtube.com/embed/#{Artiste.video}', frameborder='0', allow='autoplay; encrypted-media', allowfullscreen='')
              img.img-fluid(src=Artiste.image, alt=Artiste.nom)
            .col-12.col-md-6.text
              header
                h2.copy--orange #{Artiste.nom}
              p.description #{Artiste.description}
              .pt-4
                p.copy--blue-medium Voir en live à Festizik
                p #{Artiste.jour} - #{Artiste.heure}
              .pt-4
                p.copy--blue-medium Genre
                p #{Artiste.style}
              .pt-4
                a.button.button--orange(href="/billetterie", title="Aller à la page billetterie") Achetez votre billet
